<?xml version='1.0' encoding='UTF-8' ?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <activeProfiles>
        <activeProfile>github</activeProfile>
    </activeProfiles>

    <profiles>
        <profile>
            <id>github</id>
            <repositories>
                <repository>
                    <id>central</id>
                    <url>https://repo1.maven.org/maven2</url>
                </repository>
                <repository>
                    <id>github-package-registry-navikt</id>
                    <url>https://maven.pkg.github.com/navikt/maven-release</url>
                </repository>
                <repository>
                    <id>eux-parent-pom-repo</id>
                    <url>https://maven.pkg.github.com/navikt/eux-parent-pom</url>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>eux-versions-maven-plugin-repo</id>
                    <url>https://maven.pkg.github.com/navikt/eux-versions-maven-plugin</url>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
    <servers>
        <server>
            <id>eux-parent-pom-repo</id>
            <username>x-access-token</username>
            <password>${env.READER_TOKEN}</password>
        </server>
        <server>
            <id>eux-versions-maven-plugin-repo</id>
            <username>x-access-token</username>
            <password>${env.READER_TOKEN}</password>
        </server>
        <server>
            <id>github-package-registry-navikt</id>
            <username>${env.GITHUB_ACTOR}</username>
            <password>${env.GITHUB_TOKEN}</password>
        </server>
    </servers>
</settings>
